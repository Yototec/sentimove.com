# Disable MultiViews to prevent conflicts
Options -MultiViews

RewriteEngine On

# Skip rewriting *.php files
RewriteCond %{REQUEST_URI} \.php$
RewriteRule ^ - [L]

# Skip rewriting for actual files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 1) Redirect .html → extensionless (301)
RewriteCond %{THE_REQUEST} \s/+(.*)\.html[\s?] [NC]
RewriteRule ^(.*)\.html$ /$1 [R=301,L]

# 2) Internally rewrite extensionless → .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Optional: Redirect trailing slash to non-trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]
